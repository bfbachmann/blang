use "src/tests/test_utils.bl"

// Checks that we can use loops to calculate 25 primes between 1 and 100 (inclusive).
fn main() {
    let mut prime_count = 0

    for let mut n = 1, n <= 100, n = n + 1 {
        // 1 is not prime
        if n <= 1 {
            continue
        }

        // 2 and 3 are prime
        if n <= 3 {
            prime_count = prime_count + 1
            continue
        }

        // Divisible by 2 or 3
        if n % 2 == 0 or n % 3 == 0 {
            continue
        }
    
        let mut prime = true
        for let mut i = 5, i * i <= n, i = i + 6 {
            if n % i == 0 or n % (i + 2) == 0 {
                prime = false
                break
            }
        }
    
        if prime {
            prime_count = prime_count + 1
        }
    }

    assert(prime_count == 25, 1)

    exit(0)
}
