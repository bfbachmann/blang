extern {
    fn exit(code: u64)
    fn malloc(size: u64) ~ ptr
    fn free(ptr: ptr)
}

fn assert(b: bool, code: u64) {
    if !b {
        exit(code)
    }
}

struct T {
    i: i64,
    b: bool,
}

fn main() {
    let t_ptr = malloc(sizeof T)
    free(t_ptr)

    let s_ptr = malloc(sizeof {i64, bool})
    free(s_ptr)

    assert(sizeof T == sizeof {bool, i64}, 1)
    
    exit(0)
}
